<div class="row mt-4">
  <div class="col-md-5 project card no-padding">
    <h2 class="bg-dark text-default left-padding">create new post</h2>
    <form class="form new-project-form padding">
      <div class="form-group ">
        <label for="project-name">title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> --}}
      <div class="form-group">
        <label for="project-desc">comment:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">+ new post</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-7 project-list">
    <h3>posts</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <p class="text-dark">{{project.name}} - {{format_date date_created}}</p>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-default"><a class="text-dark" href="/project/{{project.id}}">update</a></button>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
